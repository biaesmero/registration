<%= form_for(@applicant) do |f| %>
  <% if @applicant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@applicant.errors.count, "error") %> prohibited this applicant from being saved:</h2>

      <ul>
      <% @applicant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :course %>
    <%= f.text_field :course, :placeholder => "e.g. B.S. Computer Science" %>
  </div>
  <div class="field">
    <%= f.label :app_type, "Internship or Employment?" %>
	<%= f.select :app_type, Applicant::TYPES.collect{|key ,value| [key.to_s.titleize, value]} %>
  </div>
  <div class="field">
    <%= f.label :grad_date, "Date of Graduation" %>
    <%= f.date_select :grad_date, :placeholder => "April 2013" %>
  </div>
    <div class="field">
    <%= f.label :start_date, "Date of Availability" %>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :contact_number %>
    <%= f.text_field :contact_number %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
	<hr />
  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-primary btn-large" %>
  </div>
<% end %>
